<div class="container-fluid">
  <div class="row">
  <div class="col-4">
    <div class="mt-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= image_tag "plus1_big.svg" %>
        <div class="form-inputs mt-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, class: "form-control sign" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" }, class: "form-control sign" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: 'btn btn-sm btn-primary w-100' %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="col-8">
      <div id="dinner"><%= image_tag "dinner.jpg", class: 'h-100' %></div>
    </div>
  </div>
</div>